<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".EmploymentDocuments.SubActivity.Personal.PersonalMainActivity">

    <ScrollView
        android:id="@+id/scrollView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="150dp"
            android:background="@color/white">

            <!-- 첫 번째 CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                app:cardCornerRadius="40dp"
                app:cardElevation="30dp">

                <Button
                    android:id="@+id/personal_write_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/onebon"
                    android:drawableLeft="@drawable/icon_personal_white_1"
                    android:fontFamily="@font/him"
                    android:text="자소서 작성"
                    android:textColor="@color/black"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>

            <!-- 두 번째 CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:layout_below="@id/cardView1"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="30dp">

                <Button
                    android:id="@+id/personal_loocker_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/onebon"
                    android:text="자소서 보관함"
                    android:textColor="@color/black"
                    android:fontFamily="@font/him"
                    android:textSize="25sp"
                    android:drawableRight="@drawable/icon_personal_locker_1" />
            </androidx.cardview.widget.CardView>

            <!-- 세 번째 CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:layout_below="@id/cardView2"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="30dp">

                <Button
                    android:id="@+id/personal_gpt_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/onebon"
                    android:text="gpt형 도와줘"
                    android:textColor="@color/black"
                    android:fontFamily="@font/him"
                    android:textSize="25sp"
                    android:drawableLeft="@drawable/icon_personal_gpt_1" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
