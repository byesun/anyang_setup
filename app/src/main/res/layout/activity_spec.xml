<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0F0F0"
    tools:context=".Resume_test.datamodel.EmploymentDocuments.SubActivity.Spec.SpecActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스펙 작성 공간"
            android:textSize="30sp"
            android:fontFamily="@font/him"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:padding="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#BDBDBD"
            android:layout_marginVertical="8dp"/>

        <!-- 자격증 테이블 -->
        <TableLayout
            android:id="@+id/certificationTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="자격증"
                    android:textSize="20sp"
                    android:fontFamily="@font/him"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/addCertificationButton"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_spec_create"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>

                <ImageButton
                    android:id="@+id/deleteCertificationButton"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_spec_delete"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
            </TableRow>
        </TableLayout>

        <!-- 경계선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#BDBDBD"
            android:layout_marginVertical="10dp"/>

        <!-- 대외활동 테이블 -->
        <TableLayout
            android:id="@+id/external_activitiesTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="대외활동"
                    android:textSize="20sp"
                    android:fontFamily="@font/him"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/add_external_activitiesButton"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_spec_create"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>

                <ImageButton
                    android:id="@+id/delete_external_activitiesButton"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_spec_delete"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
            </TableRow>
        </TableLayout>

        <!-- 경계선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#BDBDBD"
            android:layout_marginVertical="10dp"/>

        <!-- 수상내역 테이블 -->
        <TableLayout
            android:id="@+id/awardsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="수상내역"
                    android:textSize="20sp"
                    android:fontFamily="@font/him"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/addAwardsButton"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_spec_create"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>

                <ImageButton
                    android:id="@+id/deleteAwardsButton"
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_spec_delete"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>