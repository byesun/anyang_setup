<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Resume_test.datamodel.EmploymentDocuments.SubActivity.Personal.PersonalEditActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="title"
        android:id="@+id/title_edit"/>

    <EditText
        android:id="@+id/personal_edit"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="16dp"
        android:gravity="start|top"
        android:hint="main text"
        android:inputType="textMultiLine"
        android:minLines="5" />

    <!-- 버튼들을 담을 수 있는 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- 나가기 버튼 -->
        <Button
            android:id="@+id/personal_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:text="나가기" />

        <!-- 저장하기 버튼 -->
        <Button
            android:id="@+id/personal_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:text="저장하기" />

    </LinearLayout>
</LinearLayout>